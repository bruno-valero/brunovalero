{
  "compilerOptions": {
    "module": "NodeNext",
    "noImplicitReturns": false,
    "noUnusedLocals": true,
    "allowJs": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "es2021",
    "resolveJsonModule": true,
    "paths": {
      "@/*": ["./*"]
    },

    
    "skipLibCheck": true,
    "esModuleInterop": true,
    "isolatedModules": true,
  },
  "compileOnSave": true,
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
